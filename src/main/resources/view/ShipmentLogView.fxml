<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.foreign_trade.controller.ShipmentController"
            stylesheets="@/css/styles.css">

    <children>
        <MenuBar prefWidth="900.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <menus>
                <Menu text="Navigate">
                    <items>
                        <MenuItem text="1. Exporter Registration" onAction="#handleNavigateToExporter" />
                        <MenuItem text="2. License Issuance" onAction="#handleNavigateToLicense" />
                        <MenuItem text="3. Ship New Export" onAction="#handleNavigateToShipmentEntry" />
                        <MenuItem text="4. View Shipment Logs" onAction="#handleNavigateToShipmentLog" />
                        <MenuItem text="5. Compliance Chatbot" onAction="#handleNavigateToChatbot" />
                    </items>
                </Menu>
                <Menu text="Help" />
            </menus>
        </MenuBar>

        <Label styleClass="header-label" text="Shipment Records Filter" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0" />

        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="120.0" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <Label text="Filter by License Ref:" />
            <ComboBox fx:id="licenseIdComboBox" prefWidth="200.0" promptText="Select License Number" onAction="#handleLicenseSelection" />
        </HBox>

        <Label layoutX="20.0" layoutY="170.0" style="-fx-font-weight: bold;" text="Filtered Shipment Logs" AnchorPane.leftAnchor="20.0" />
        <TableView fx:id="shipmentTable" layoutX="20.0" layoutY="200.0" prefHeight="380.0" prefWidth="860.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="productColumn" prefWidth="150.0" text="Product" />
                <TableColumn fx:id="destinationColumn" prefWidth="150.0" text="Destination" />
                <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                <TableColumn fx:id="costColumn" prefWidth="100.0" text="Cost ($)" />
                <TableColumn fx:id="insuranceColumn" prefWidth="80.0" text="Insured?" />
                <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Date/Time" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

    </children>
</AnchorPane>