<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import java.net.URL?>

<AnchorPane prefHeight="330.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.foreign_trade.controller.ExporterController"
            stylesheets="@/css/styles.css">

    <children>
        <!-- ============ MENU BAR ============ -->
        <MenuBar prefWidth="450.0"
                 AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="0.0">
            <menus>
                <Menu text="Navigate">
                    <items>
                        <MenuItem text="1. Exporter Registration" onAction="#handleNavigateToExporter" />
                        <MenuItem text="2. License Issuance" onAction="#handleNavigateToLicense" />
                        <MenuItem text="3. Ship New Export" onAction="#handleNavigateToShipmentEntry" />
                        <MenuItem text="4. View Shipment Logs" onAction="#handleNavigateToShipmentLog" />
                        <MenuItem text="5. Compliance Chatbot" onAction="#handleNavigateToChatbot" />
                    </items>
                </Menu>
                <Menu text="Help" />
            </menus>
        </MenuBar>

        <!-- ============ HEADER LABEL (Moved Up Slightly) ============ -->
        <Label styleClass="header-label"
               text="Exporter Registration"
               AnchorPane.leftAnchor="20.0"
               AnchorPane.rightAnchor="20.0"
               AnchorPane.topAnchor="45.0" />
        <!-- Was 70.0, now 45.0 so it sits higher and doesnâ€™t overlap -->

        <!-- ============ FORM GRID (Moved Slightly Lower) ============ -->
        <GridPane layoutX="25.0" layoutY="105.0" prefHeight="150.0" prefWidth="400.0"
                  AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="280.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="Firm Name:" />
            <TextField fx:id="firmNameField" GridPane.columnIndex="1" />
            <Label text="IEC Number:" GridPane.rowIndex="1" />
            <TextField fx:id="iecNumberField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="MANDATORY 10-digit code" />
            <Label text="Contact Person:" GridPane.rowIndex="2" />
            <TextField fx:id="contactPersonField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Country:" GridPane.rowIndex="3" />
            <TextField fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>

        <!-- ============ BUTTON ============ -->
        <Button layoutX="25.0" layoutY="260.0" mnemonicParsing="false"
                onAction="#handleRegisterButton"
                text="Register Exporter"
                AnchorPane.leftAnchor="25.0" />

    </children>
</AnchorPane>